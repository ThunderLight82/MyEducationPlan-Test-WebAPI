@model IEnumerable<MyEducationPlan.Domain.Entities.InternProject>

<div class="container py-5">
    <h2 class="mb-4 text-center">Projects</h2>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        @foreach (var project in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title">@project.Name</h5>
                        <a href="@Url.Action("GetFeedbacksListByProjectId", "Home", new { projectId = project.ProjectId })"
                           class="btn btn-primary mt-3 w-100">View Feedback</a>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" style="margin-top: 20px;">@TempData["ErrorMessage"]</div>
    }
</div>